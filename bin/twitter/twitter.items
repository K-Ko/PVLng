##############################################################################
### Today working hours in hours :-)
##############################################################################
function twitter_today_working_hours {
  url="$PVLngURL1/$1.tsv"
  log 1 "$url"

  $($curl $url >$TMPFILE)

  ### skip attribtues line, get first line, get 1st value
  min=$(cat $TMPFILE | tail -n+2 | head -n1 | cut -f1)
  ### skip attribtues line, get last line, get 1st value
  max=$(cat $TMPFILE | tail -n+2 | tail -n1 | cut -f1)
  log 1 "=> $min - $max"

  ### to hours
  echo "scale=3; ($max - $min) / 3600" | bc -l
}
