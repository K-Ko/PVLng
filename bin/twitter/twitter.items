##############################################################################
### Actual power
##############################################################################
function twitter_power {
  url="$PVLngURL1/$1.tsv?period=last"
  log 1 "$url"

  ### skip attribtues line, get last line, get 2nd value
  value=$($curl $url | tail -n+2 | tail -n1 | cut -f2)
  log 1 "=> $value"

  echo $value
}

##############################################################################
### Average power over the last $1 minutes (e.g. 60 for last hour)
##############################################################################
function twitter_power_avg {
  url="$PVLngURL1/$2.tsv?start=-${1}minutes&period=${1}minutes"
  log 1 "$url"

  ### skip attribtues line, get last line, get 2nd value
  value=$($curl $url | tail -n+2 | tail -n1 | cut -f2)
  log 1 "=> $value"

  echo $value
}

##############################################################################
### Max. power of today
##############################################################################
function twitter_power_max {
  url="$PVLngURL1/$1.tsv"
  log 1 "$url"

  ### skip attribtues line
  $($curl $url | tail -n+2 >$TMPFILE)

  max=0
  while read line; do
    value=$(echo "$line" | cut -f2)
    test $value -gt $max && max=$value
  done < $TMPFILE

  log 1 "=> $max"
  echo $max
}

