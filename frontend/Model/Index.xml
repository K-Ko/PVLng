<SQL>

	<Views>
		<![CDATA[
			SELECT * FROM `pvlng_view`
		]]>
	</Views>

	<View>
		<![CDATA[
			SELECT * FROM `pvlng_view` WHERE `name` = "{1}"
		]]>
	</View>

	<SaveView>
		<![CDATA[
			REPLACE INTO `pvlng_view` VALUES( "{1}", "{2}", "{3}" )
		]]>
	</SaveView>

	<DeleteView>
		<![CDATA[
			DELETE FROM `pvlng_view` WHERE `name` = "{1}"
		]]>
	</DeleteView>

</SQL>
