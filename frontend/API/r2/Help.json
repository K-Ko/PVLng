{
    "calls": [
        {
            "pattern": "/api/r2/help",
            "description": "Help about API calls",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/:guid",
            "description": "Save a reading value",
            "methods": [ "PUT" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/attributes/:guid",
            "description": "Read all channel attributes",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/attributes/:guid/:name",
            "description": "Read only channel attribute :name",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/data/:guid",
            "description": "Read only 'timestamp' and 'data' values",
            "methods": [ "PUT" ]
        },
        {
            "pattern": "/api/r2/data/:guid?:parameters",
            "description": "Read only 'timestamp' and 'data' values",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/batch/:guid",
            "description": "Read only 'timestamp' and 'data' values",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/log",
            "description": "Log a message",
            "methods": [ "PUT" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/log/{id}",
            "description": "Get a logged message",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/log/{id}",
            "description": "Update a logged message",
            "methods": [ "POST" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/log/{id}",
            "description": "Delete a logged message",
            "methods": [ "DELETE" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/log",
            "description": "Delete all logged messages of scope or all messages if scope is empty",
            "methods": [ "DELETE" ],
            "headers": [ "X-PVLng-key" ]
        }
    ],
    "parameters": [
        {
            "name": "start",
            "description": "Start timestamp for readout, default today 00:00",
            "value": [ "YYYY-mm-dd HH:ii:ss", "seconds since 1970", "relative from now" ]
        },
        {
            "name": "end",
            "description": "End timestamp for readout, default today midnight",
            "value": [ "YYYY-mm-dd HH:ii:ss", "seconds since 1970", "relative from now" ]
        },
        {
            "name": "period",
            "description": "aggregation period, default none",
            "value": [ "[0-9.]+minutes", "[0-9.]+hours", "[0-9.]+days", "[0-9.]+weeks",
			           "[0-9.]+month", "[0-9.]+quarters", "[0-9.]+years", "last" ]
        },
        {
            "name": "mode",
            "description": "Data mode",
            "value": [ "full", "short", "fullshort" ]
        },
        {
            "name": "attributes",
            "description": "Return channel attributes as 1st line",
            "value": [ "1", "true", "yes" ]
        }
    ]
}
