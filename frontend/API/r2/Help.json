{
    "calls": [
        {
            "pattern": "/api/r2/help",
            "description": "Help about API calls",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/:guid",
            "description": "Save a reading value",
            "methods": [ "PUT" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/:guid/attributes",
            "description": "Read all channel attributes",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/:guid/attributes/:name",
            "description": "Read only channel attribute :name",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/:guid/data?:parameters",
            "description": "Read only 'timestamp' and 'data' values",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/:guid/data/full?:parameters",
            "description": "Read full data",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/:guid/data/short?:parameters",
            "description": "Read minimized data as array",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/log",
            "description": "Log a message",
            "methods": [ "PUT" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/log/{id}",
            "description": "Get a logged message",
            "methods": [ "GET" ]
        },
        {
            "pattern": "/api/r2/log/{id}",
            "description": "Update a logged message",
            "methods": [ "POST" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/log/{id}",
            "description": "Delete a logged message",
            "methods": [ "DELETE" ],
            "headers": [ "X-PVLng-key" ]
        },
        {
            "pattern": "/api/r2/log",
            "description": "Delete all logged messages of scope or all messages if scope is empty",
            "methods": [ "DELETE" ],
            "headers": [ "X-PVLng-key" ]
        }
    ],
    "parameters": [
        {
            "name": "start",
            "description": "Start timestamp for readout, default today 00:00",
            "value": [ "YYYY-mm-dd HH:ii:ss", "seconds since 1970", "relative from now" ]
        },
        {
            "name": "end",
            "description": "End timestamp for readout, default today midnight",
            "value": [ "YYYY-mm-dd HH:ii:ss", "seconds since 1970", "relative from now" ]
        },
        {
            "name": "period",
            "description": "aggregation period, default none",
            "value": [ "\d*minutes", "\d*hours", "\d*days", "\d*weeks", "\d*month", "\d*quarters", "\d*years", "last" ]
        }
    ]
}
